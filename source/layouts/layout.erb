<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title>Highly Improvable</title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>" onload="taglineSelect()">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-push-1 header">
          <img class="title" src="../images/hi_logo_bw_text.svg"/>
          <h1 id="random-tagline"></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2 col-md-push-1 nav">
          <ul class="navigation">
            <li>Schedule</li>
            <li>Hire Us</li>
            <li>Podcast</li>
            <li>Cast</li>
            <li>News</li>
            <li>Contact Us</li>
          </ul>
        </div>
        <div class="col-md-8 col-md-push-1 content">
          <%= yield %>
        </div>
      </div>
    </div>
  <footer class="row">

  </footer>
  </body>
</html>